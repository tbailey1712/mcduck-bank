# Firebase Configuration
# Get these values from your Firebase project console
REACT_APP_FIREBASE_API_KEY=your-api-key-here
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
REACT_APP_FIREBASE_APP_ID=your-app-id

# Development Settings
# Set to 'true' to use Firebase emulators in development
REACT_APP_USE_FIREBASE_EMULATOR=false

# Environment
NODE_ENV=development

# Security Settings
# Enable/disable debugging features
REACT_APP_ENABLE_DEBUG=false

# Error Reporting
# Set to 'true' to enable error reporting to external services
REACT_APP_ENABLE_ERROR_REPORTING=false

# UI Configuration
# Show build number in navbar (default: true)
REACT_APP_SHOW_BUILD_NUMBER=true

# Show navigation buttons in navbar (default: false, uses bottom nav instead)
REACT_APP_SHOW_NAVBAR_NAVIGATION=false